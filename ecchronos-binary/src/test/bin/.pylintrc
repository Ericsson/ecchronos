[MASTER]
init-hook='import sys; sys.path.append("${project.basedir}/src/test/behave")'

[MESSAGES CONTROL]
disable=
  missing-docstring,
  useless-object-inheritance

[SIMILARITIES]
ignore-imports=yes
min-similarity-lines=8

[FORMAT]
max-line-length=120

[BASIC]
good-names=
  e,
  i

[TYPECHECK]
disable=bad-option-value
