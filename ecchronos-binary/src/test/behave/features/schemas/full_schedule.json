{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "a full schedule",
  "description": "A full schedule with virtual node states",
  "type": "object",
  "properties": {
    "jobID": {
      "type": "string"
    },
    "nodeID": {
      "type": "string"
    },

    "keyspace": {
      "type": "string"
    },
    "table": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "description": "The status of the repair with regards to its schedule and last successful repair"
    },
    "repairedRatio": {
      "type": "number",
      "description": "Ratio of how much of the table that has been repaired"
    },
    "lastRepairedAtInMs": {
      "type": "integer",
      "description": "When the table was last repaired in millis since epoch"
    },
    "nextRepairInMs": {
      "type": "integer",
      "description": "When the table is scheduled for the next repair in millis since epoch"
    },
    "repairType": {
      "type": "string",
      "description": "The type of repair for the schedule"
    },
    "config": {
      "type": "object",
      "properties": {
        "intervalInMs": {
          "type": "integer"
        },
        "unwindRatio": {
          "type": "number"
        },
        "warningTimeInMs": {
          "type": "integer"
        },
        "errorTimeInMs": {
          "type": "integer"
        },
        "parallelism": {
          "type": "string"
        }
      },
      "required": [
        "intervalInMs",
        "unwindRatio",
        "warningTimeInMs",
        "errorTimeInMs",
        "parallelism"
      ]
    },
    "virtualNodeStates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "startToken": {
            "type": "integer"
          },
          "endToken": {
            "type": "integer"
          },
          "replicas": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "lastRepairedAtInMs": {
            "type": "integer"
          },
          "repaired": {
            "type": "boolean"
          }
        },
        "required": [
          "startToken",
          "endToken",
          "replicas",
          "lastRepairedAtInMs",
          "repaired"
        ]
      }
    }
  },
  "required": [
    "keyspace",
    "table",
    "status",
    "repairedRatio",
    "lastRepairedAtInMs",
    "nextRepairInMs",
    "repairType",
    "config",
    "virtualNodeStates"
  ]
}