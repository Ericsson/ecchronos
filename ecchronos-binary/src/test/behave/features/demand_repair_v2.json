{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Demand Repair",
  "description": "An on demand repair",
  "type": "object",
  "properties": {
    "keyspace": {
      "type": "string"
    },
    "table": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "description": "The status of the repair with regards to its schedule and last successful repair"
    },
    "repairedRatio": {
      "type": "number",
      "description": "Ratio of how much of the table that has been repaired"
    },
    "completedAt": {
      "type": "integer",
      "description": "When the repair was completed"
    },
    "id": {
      "type": "string",
      "description": "A unique identifier for the job"
    }
  },
  "required": [
    "id",
    "keyspace",
    "table",
    "status",
    "repairedRatio",
    "completedAt"
  ]
}